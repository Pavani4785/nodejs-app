{
    "family": "nodejs-app-task-definition",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "executionRoleArn": "arn:aws:iam::938133920019:role/ecsTask",
    "taskRoleArn": "arn:aws:iam::938133920019:role/ecsTaskRole"
,

    "containerDefinitions": [
        {
            "name": "nodejs-app",
            "image": "938133920019.dkr.ecr.us-east-1.amazonaws.com/nodejs-app",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/nodejs-app-task-definition",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
